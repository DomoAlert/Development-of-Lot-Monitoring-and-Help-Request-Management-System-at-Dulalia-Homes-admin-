{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "CI=false npm run build",
        "installCommand": "npm install --legacy-peer-deps"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--max_old_space_size=4096",
      "CI": "false",
      "PUBLIC_URL": ""
    }
  },
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(favicon.ico|logo192.png|logo512.png|manifest.json|robots.txt)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "routes": [
    { 
      "src": "/static/(.*)", 
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/static/$1" 
    },
    { 
      "src": "/assets/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/assets/$1" 
    },
    { 
      "src": "/favicon.ico",
      "dest": "/favicon.ico" 
    },
    { 
      "src": "/logo192.png",
      "dest": "/logo192.png" 
    },
    { 
      "src": "/logo512.png",
      "dest": "/logo512.png" 
    },
    { 
      "src": "/manifest.json",
      "headers": {
        "content-type": "application/manifest+json"
      },
      "dest": "/manifest.json" 
    },
    { 
      "src": "/apple-touch-icon.png", 
      "dest": "/logo192.png" 
    },
    { 
      "src": "/robots.txt",
      "dest": "/robots.txt" 
    },
    {
      "src": "^/admin/?$|^/admin/(.*)",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      },
      "dest": "/index.html"
    },
    { 
      "src": "/(.*)", 
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      },
      "dest": "/index.html" 
    }
  ]
}